  		</select>

		<script>
			var Mec = "";
			var Desc = "";
			$('#ReparacionSelect').hide();
			$('#MantoSelect').show();
			function selected(){
				if ($('input[name=tipo]:checked').val() == "0"){
					$('#ReparacionSelect').hide();
					$('#MantoSelect').show();
					
				}else{
					$('#MantoSelect').hide();
					$('#ReparacionSelect').show();
					
				}
			}
			$( "#ReparacionSelect" )
				.change(function () {
