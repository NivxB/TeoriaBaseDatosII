	$("#ContactBut").click(function(){			
			$("#homePrin").hide();
			$("#ContPrin").show();
		});
	$("#createCita").click(function(){
  		$.ajax({
	     		url: "/updateEstado",
	      		type: "POST",
	      		data: {Estado: $('#ESTADO').find(":selected").val() ,idCita: $('#citas_all').find(":selected").val()  ,PosibleDate: $("#estimadaFecha").val() },
	      		success: function(data){                
  				if (data != "Error"){
  					alert(data);
  					var url = "/homepage"
  					window.location.href=url
				}
				else{
					alert("ASD")				
				}
			}
  		});
	});
	</script>
